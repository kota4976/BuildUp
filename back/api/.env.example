# Database routing
DATABASE_TARGET=dev          # dev (SSH) or docker (local container)
RUNTIME_CONTEXT=local        # local (host) or docker (container)

# Connection presets
DATABASE_URL_DOCKER=postgresql://
DATABASE_URL_DEV_LOCAL=postgresql://
DATABASE_URL_DEV_DOCKER=postgresql://

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost/api/v1/auth/github/callback

# JWT
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=43200

# Application
APP_NAME=BuildUp
APP_ENV=development
CORS_ORIGINS=http://localhost,http://localhost:80

# Server
API_HOST=127.0.0.1
API_PORT=8080

